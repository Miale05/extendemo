{
  "name": "doki-doc",
  "displayName": "doki-doc",
  "description": "Genera documentacion Markdown y diagramas Mermaid",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": ["Other"],
  "publisher": "miguelduenas",
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "doki.docKarate",
        "title": "Doki: Generar Documentaci√≥n de un archivo .feature"
      }
    ],
    "copilot": {
      "agents": [
        {
          "id": "doki",
          "name": "doki",
          "entrypoint": "./copilot-agent.json"
        }
      ]
    }
  },
  "activationEvents": [
    "onCommand:doki.docKarate",
    "onStartupFinished"
  ],
  "copilot-agent": true,
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "gherkin-parser": "^1.0.1"
  }
}
